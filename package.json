{
  "name": "farmalibre-dev",
  "version": "1.0.0",
  "scripts": {
    "initdb": "./scripts/init-db.sh",
    "setup": "./scripts/dev-tomcat.sh",
    "dev": "node scripts/watch-dev.js",
    "watch": "npm run dev",
    "compile": "mvn compile -DskipTests",
    "quick": "./scripts/restart.sh",
    "refreshweb": "pnpm run compile & pnpm run deploy:skiptest",
    "deploy": "mvn clean package && cp target/*.war $CATALINA_HOME/webapps/",
    "deploy:skiptest": "mvn clean package -DskipTests && cp target/*.war $CATALINA_HOME/webapps/",
    "refresh": "npm run compile & npm run deploy",
    "tomcat:start": "dotenv -e .env.dev $CATALINA_HOME/bin/startup.sh",
    "tomcat:debug": "CATALINA_OPTS=\"-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:8000\" dotenv -e .env.dev $CATALINA_HOME/bin/startup.sh",
    "tomcat:stop": "$CATALINA_HOME/bin/shutdown.sh",
    "tomcat:restart": "$CATALINA_HOME/bin/shutdown.sh && sleep 2 && dotenv -e .env.dev $CATALINA_HOME/bin/startup.sh",
    "db:seed": "mysql -u root -p < src/main/resources/seed.sql",
    "reload": "pnpm run refreshweb && pnpm run tomcat:restart"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "dotenv-cli": "^7.4.2",
    "prettier-plugin-java": "^2.8.1"
  }
}
